! Common:
URxvt*transparent: false
URxvt*tintColor: Blue
URxvt*shading: 40
URxvt*saveLines: 12000
URxvt*termName: rxvt
URxvt*matcher.button: 1
URxvt.depth: 32
URxvt.fading: 20
URxvt*iso14755: false
URxvt*visualBell: false
URxvt*buffered: true

! Links:
URxvt*cutchars: `"()'*<>[]{|}
URxvt*perl-lib:         /usr/lib/urxvt/perl/
URxvt*perl-ext-common:  default,matcher
URxvt*matcher.button:   1
Urxvt*urlLauncher:      /usr/bin/google-chrome

! Font:
URxvt*font: xft:Source Code Pro:pixelsize=20:antialias=true:autohint=true
URxvt*boldFont: xft:Source Code Pro:bold:pixelsize=20:antialias=true:autohint=true
URxvt*italicFont: xft:Source Code Pro:italic:pixelsize=20:antialias=true:autohint=true
URxvt*boldItalicFont: xft:Source Code Pro:bold:italic:pixelsize=20:antialias=true:autohint=true
Xft*hinting: full
URxvt*allow_bold: true
URxvt.letterSpace: -1

! Thin orange scrollbar on the right:
URxvt*scrollBar: true
URxvt*scrollBar_right: true
URxvt*scrollstyle: plain
URxvt*scrollColor: Orange

! Make links clickable:
URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1

! Cursor style:
URxvt.cursorColor: white
URxvt*cursorBlink: true

! terminal colors:
URxvt*foreground: #FEFEFE
URxvt*background: #0c0d0e
URxvt*colorUL:  #5F87D7
URxvt*underlineColor:  #5F87D7
! black
URxvt*color0  : #2E3436
URxvt*color8  : #555753
! red
URxvt*color1  : #CC0000
URxvt*color9  : #EF2929
! green
URxvt*color2  : #4E9A06
URxvt*color10 : #8AE234
! yellow
URxvt*color3  : #C4A000
URxvt*color11 : #FCE94F
! blue
URxvt*color4  : #3465A4
URxvt*color12 : #729FCF
! magenta
URxvt*color5  : #75507B
URxvt*color13 : #AD7FA8
! cyan
URxvt*color6  : #06989A
URxvt*color14 : #34E2E2
! white
URxvt*color7  : #D3D7CF
URxvt*color15 : #EEEEEC
